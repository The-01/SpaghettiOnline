@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete" method="post">
    <div class="container p-3">
        <div class="border p-3">
            <h1 class="h2 mb-3">Delete Role</h1>
            <hr /><br />

            <input asp-for="Id" hidden />
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        Role Id
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Id
                    </dd>
                    <dt class="col-sm-2">
                        Role Name
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Name
                    </dd>
                </dl>
            </div>
            <button id="confirm-deletion" type="submit" class="btn btn-danger" style="width:150px" asp-route-id="@Model.Id">Delete</button>
            <a asp-controller="Roles" asp-action="Index" class="btn btn-light" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
</form>
