@model User

@{
    ViewData["Title"] = "Signup";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-md-6 mx-auto">
                <div class="card border-0 shadow rounded-3 mt-3 mb-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 font-weight-normal" style="font-size:1.5rem;">Create your account</h5>
                        <form asp-action="Signup" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group py-2 mb-3">
                                <input asp-for="UserName" class="form-control" placeholder="Username" style="border-radius:20px" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group py-2 mb-3">
                                <input asp-for="Email" class="form-control" placeholder="Email Address" style="border-radius:20px" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group py-2 mb-3">
                                <input asp-for="Password" class="form-control" placeholder="Password" style="border-radius:20px" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <hr class="my-4">
                            <p class="small mt-3 text-center">
                                By signing up, you are indicating that you have read and agree to our <a href="#" class="ps-hero__content__link">Terms of Use</a> and <a href="#">Privacy Policy</a>.
                            </p>
                            <hr class="my-4">
                            <div class="d-flex justify-content-center align-items-center">
                                <input type="submit" value="Sign up" class="btn btn-primary text-uppercase font-weight-bold" style="width:150px; font-size:1rem; letter-spacing:0.05rem; padding:0.75rem 1rem; border-radius:25px;" />
                            </div>
                            <hr class="my-4">
                            <p class="small my-2 text-center">
                                Already have an account? Please <a href="#" class="ps-hero__content__link">Login</a> here.
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
