
@{
    ViewData["Title"] = "Contact Us";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 mx-auto">
                <div class="card border-0 shadow rounded-3 mt-3 mb-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 font-weight-normal" style="font-size:1.5rem;">
                            Contact Us <br />
                            <span class="font-weight-light" style="font-size:1rem;">
                            Any queries in your mind? Just type your message and hit the submit button!
                            </span>
                        </h5>
                        <form method="post">
                            <div class="form-group mb-3">
                                <input class="form-control" type="text" placeholder="Username" style="border-radius:8px;" />
                            </div>
                            <div class="form-group mb-3">
                                <input class="form-control" type="email" placeholder="Email Address" style="border-radius:8px;" />
                            </div>
                            <div class="form-group mb-3">
                                <textarea class="form-control" type="text" placeholder="Message" rows="6" style="border-radius:8px;"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Submit" class="btn btn-info" style="border-radius: 8px; width: 100%; height: 50px; font-size: 1rem; letter-spacing: 0.05rem; padding: 0.75rem 1rem;" />
                            </div>
                        </form>                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
